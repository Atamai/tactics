# This module is provided as Cerebra_USE_FILE by CerebraConfig.cmake.  It can
# be INCLUDEd in a project to load the needed compiler and linker settings.

if(NOT Cerebra_USE_FILE_INCLUDED)
  set(Cerebra_USE_FILE_INCLUDED 1)

  # Dependencies
  set(VTK_DIR ${Cerebra_VTK_DIR})
  find_package(VTK)
  if(VTK_FOUND)
    include(${VTK_USE_FILE})
  else()
    message(FATAL_ERROR
      "VTK not found in Cerebra_VTK_DIR=\"${Cerebra_VTK_DIR}\".")
  endif()

  # Update CMAKE_MODULE_PATH so includes work.
  set(CMAKE_MODULE_PATH
    ${CMAKE_MODULE_PATH}
    ${Cerebra_CMAKE_DIR})

  # Add compiler flags needed to use Cerebra.
  set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${Cerebra_REQUIRED_C_FLAGS}")
  set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${Cerebra_REQUIRED_CXX_FLAGS}")

  # Add include directories needed to use Cerebra.
  INCLUDE_DIRECTORIES(${Cerebra_INCLUDE_DIRS})

ENDIF(NOT Cerebra_USE_FILE_INCLUDED)
